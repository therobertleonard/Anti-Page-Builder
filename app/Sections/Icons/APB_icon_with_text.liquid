<!-- Welcome section starts -->
{% comment %}
<!-- Main container for the shipping section -->
{% endcomment %}
<div class="shipping-section" 
     style="background-color:{{ section.settings.color_accent1 }}; 
            padding-top:{{ section.settings.padding_top }}px; 
            padding-bottom:{{ section.settings.padding_bottom }}px">
{% comment %}
  <!-- Page section to hold the entire content structure -->
  {% endcomment %}
  <div class="page-section">
    <div class="container-row">
      <div class="rows">
        {% comment %}
        <!-- Loop through each block in the section to dynamically generate content -->
        {% endcomment %}
        {%- for block in section.blocks -%}
         {% comment %}
        <!-- Individual content column for each block -->
        {% endcomment %}
        <div class="cols_row">

          {% comment %}
          <!-- Image Section -->
          Display an image for each block. If 'image-section' is provided in the settings, use it.
          If no image is provided (blank), use a default SVG vector image.
          {% endcomment %}
          <img src="{% if section.settings.image-section != blank %}{{ section.settings.image-section | img_url: 'small' }}{% else %}https://cdn.shopify.com/s/files/1/0674/8363/1794/files/Vector_10.svg?v=1727073756{% endif %}" 
               alt="Banner Image" />

          <!-- Content section containing the heading and description -->
          <div class="content">

            {% comment %}
            <!-- Heading Section -->
            The heading is styled dynamically based on the settings for each block.
            The font size and color are customizable per block.
            {% endcomment %}
            <h4 style="font-size: {{ block.settings.hdg-text-size }}px; 
                       color:{{ block.settings.textcolor }};">
              {{ block.settings.heading }}
            </h4>

            {% comment %}
            <!-- Description Section -->
            The description text for each block, with customizable font size and color settings.
            The description is dynamically populated based on the block's settings.
            {% endcomment %}
            <div class="discription" 
                 style="font-size: {{ block.settings.para-text-size }}px; 
                        color:{{ block.settings.textcolor1 }};">
              {{ block.settings.description }}
            </div>

          </div> <!-- End of content section -->
        </div> <!-- End of individual content column -->

        {%- endfor -%} <!-- End of the loop generating blocks -->

      </div> <!-- End of rows -->
    </div> <!-- End of container-row -->
  </div> <!-- End of page-section -->
</div> <!-- End of shipping-section -->

<!-- Welcome section ends -->


<!-- Welcome section ends -->
<style>

  .shipping-cols .container-row .rows {
    display: flex;
    gap: 20px;
    justify-content: space-evenly;
}
  .shipping-cols .container-row .rows .content {
    text-align: center;
    padding-top: 10px;
}
  .shipping-cols .container-row .rows .cols_row img {
    width: 40px;
    height: 40px;
    object-fit: contain;
}
  .shipping-cols .container-row .rows .cols_row {
    display: flex;
    flex-direction: column;
    align-items: center;
    column-gap: 20px;
}
  .shipping-cols .container-row .rows .cols_row p {
    margin: 0;
    font-size: 14px;
    line-height: 20px;
    color:{{ section.settings.textcolor1 }};
}
.shipping-cols .container-row .rows .cols_row h4 {
    margin: 0 0 5px;
    font-size: 16px;
    text-transform: capitalize;
    font-weight: 600;
   color:{{ section.settings.textcolor }};
}
.shipping-cols .cols_row .icon {
    width: 42px;
    height: 42px;
}
  .shipping-cols .page-section
  {
     padding: 0 1rem;
  }
    @media (min-width: 1200px){
        .shipping-cols .container-row .rows .cols_row p {
    width: 254px;
}
      .shipping-cols .page-section {
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 5rem;
}
    }
      @media (max-width: 1199px){
  .shipping-cols .container-row .rows {
        flex-wrap: wrap;
}
}
  @media (max-width: 767px){
body .shipping-cols .container-row .rows {
    flex-direction: column;
}
  }
</style>

{% schema %}
{
"name": "icon-with-text-2",
 "class": "shipping-cols",
   "settings": 
  [ 
    { 
      "type": "color", 
      "id": "color_accent1", 
      "label": "Background Color", 
      "default": "#fff" 
    },
    { 
      "type": "range", 
      "id": "padding_top", 
      "min": 0, 
      "max": 100,
      "step": 4, 
      "unit": "px", 
      "label": "Padding Top", 
      "default": 40 
    }, 
    { 
      "type": "range", 
      "id": "padding_bottom", 
      "min": 0, 
      "max": 100, 
      "step": 4, 
      "unit": "px", 
      "label": "Padding Bottom", 
      "default": 52 
    }
	],
 "blocks": [
    {
      "type": "column",
      "name": "column",
      "settings": [
     {
      "type": "image_picker",
      "id": "image_section",
      "label": "Image"
    },
             { 
      "type": "color", 
      "id": "textcolor", 
      "label": "heading-color", 
      "default": "#000" 
    }, 
     { 
      "type": "color", 
      "id": "textcolor1", 
      "label": "text-color", 
      "default": "#000" 
    }, 
	        {
      "type": "text",
      "id": "heading",
      "label": "heading",
      "default": "Free Shipping"
     },
                     {
      "type": "number",
      "id": "hdg-text-size",
      "label": "hdg text size",
      "default": 20
     },
      {
        "type": "richtext",
        "id": "description",
        "label": "Text",
        "default": "<p>Order today, receive tomorrow</p>"
      },
                             {
      "type": "number",
      "id": "para-text-size",
      "label": "para text size",
      "default": 16
     }
      ]
    }
  ],
"presets": [
{
"name": "APB_icon_with_text",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
}
]
}
{% endschema %}
