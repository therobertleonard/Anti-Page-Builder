<!-- testimonial-slider.liquid -->
{% comment %}
<!-- Main container for the testimonial slider section -->
{% endcomment %}
<div class="testimonial-slider {{ section.settings.custom_class }}" 
     style="padding-top:{{ section.settings.pt-top }}px; padding-bottom: {{ section.settings.pb-bottom }}px;">
{% comment %}
  <!-- Container for all content inside the section -->
  {% endcomment %}
  <div class="page-width">
{% comment %}
    <!-- Main heading for the testimonial section -->
    {% endcomment %}
    <h2 class="testimonial-heading {{ section.settings.vertical_alignment }}" 
        style="font-size: {{ section.settings.main_hdg_font_size }}px; 
               color: {{ section.settings.main_hdg_color }}; 
               letter-spacing: {{ section.settings.main-hdg-letter-spacing }}px; 
               font-family: {{ section.settings.font_family_main_hdg }}; 
               font-weight: {{ section.settings.font_weight_main_hdg }};">
      {{ section.settings.heading }}
    </h2>
{% comment %}
    <!-- Container holding all individual testimonial cards -->
    {% endcomment %}
    <div class="testimonial-container testimonial_section">
    
      {% comment %}
      <!-- Loop through each block in the section to display individual testimonials -->
      {% endcomment %}
      {% for block in section.blocks %}
      
        <!-- Individual Testimonial Card -->
        <div class="testimonial-card">
        
          {% comment %}
          <!-- Display the rating stars based on the number of stars set in the block settings -->
          The number of stars is dynamically determined by `block.settings.stars`.
          {% endcomment %}
          <div class="testimonial-rating">
            {% for i in (1..block.settings.stars) %}
              <span>â˜…</span> <!-- Display a star icon for each star -->
            {% endfor %}
          </div>

          {% comment %}
          <!-- Review Text: Display the actual testimonial written by the customer -->
          The review text's font size, color, and letter-spacing are customizable through block settings.
          {% endcomment %}
          <p class="testimonial-text" 
             style="font-size: {{ block.settings.hdg_font_size }}px; 
                    color: {{ block.settings.hdg_color }}; 
                    letter-spacing: {{ block.settings.hdg-letter-spacing }}px;
                    font-family: {{ block.settings.font_family_hdg }}; 
                    font-weight: {{ block.settings.font_weight_hdg }};">
            {{ block.settings.review_text }} <!-- Display the customer's review text -->
          </p>

          <!-- Customer information section -->
          <div class="testimonial-customer">
          
            {% comment %}
            <!-- Display customer image: If the customer uploaded an image, use it, otherwise use a default image -->
            {% endcomment %}
            <img src="{% if block.settings.image != blank %} 
                        {{ block.settings.image | img_url: 'small' }} 
                        {% else %} 
                        https://cdn.shopify.com/s/files/1/0887/8194/7244/files/image.png?v=1730268835  
                        {% endif %}" alt="Customer Image">

            <!-- Customer's name and product they reviewed -->
            <div class="customer-info">
            
              {% comment %}
              <!-- Display the customer's name with customizable styling -->
              The font size, color, letter-spacing, and font family for the name are dynamically controlled by block settings.
              {% endcomment %}
              <strong class="name-text" 
                      style="font-size: {{ block.settings.name_font_size }}px; 
                             color: {{ block.settings.hdg_color }}; 
                             letter-spacing: {{ block.settings.name-letter-spacing }}px;
                             font-family: {{ block.settings.font_family_name }}; 
                             font-weight: {{ block.settings.font_weight_name }};">
                {{ block.settings.name }} <!-- Display the customer's name -->
              </strong>

              {% comment %}
              <!-- Display the product the customer reviewed with customizable styling -->
              The font size, color, letter-spacing, and font family for the product name are dynamically controlled by block settings.
              {% endcomment %}
              <p class="rose_name" 
                 style="font-size: {{ block.settings.rose_font_size }}px; 
                        color: {{ block.settings.rose_color }}; 
                        letter-spacing: {{ block.settings.rose-letter-spacing }}px;
                        font-family: {{ block.settings.font_family_rose }}; 
                        font-weight: {{ block.settings.font_weight_rose }};">
                {{ block.settings.product }} <!-- Display the product's name -->
              </p>
            </div>
          </div>
        </div> <!-- End of testimonial card -->

      {% comment %}
      <!-- End of loop for displaying testimonials -->
      {% endcomment %}
      {% endfor %}
    </div> <!-- End of testimonial container -->
  </div> <!-- End of page-width container -->
</div> <!-- End of testimonial-slider -->



<style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap');
  /* slick css */
  button.slick-arrow {
    border: 0px;
    background: transparent;
    font-size: 0px;
    position: relative;
    display: none;
}
.slick-list.draggable {
    padding: 30px 0px 20px !important;
}
  .testimonial-card.slick-slide.slick-current.slick-active.slick-center {
    transform: scale(1.1);
}
  ul.slick-dots li button {
    border: 0px;
    background: transparent;
    font-size: 0px;
}
   ul.slick-dots li.slick-active {
    background: #000000 !important;
    width: 15px !important;
    height: 15px !important;
}
  ul.slick-dots li {
    width: 10px;
    height: 10px;
    background: #999;
    list-style: none;
    margin: 0px 4px;
    border-radius: 50px;
    cursor: pointer;
}
  ul.slick-dots {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0px;
}
  /* End here */
  .testimonial-slider {
    text-align: center;
  }
  .testimonial-customer img {
    width: 70px;
    height: 70px;
}
.testimonial-container {
    display: flex;
    justify-content: center;
    gap: 20px;
    overflow: hidden;
    flex-direction: column;
}
  ul.slick-dots {
    display: flex;
    justify-content: center;
}
.testimonial-card {
    width: 300px;
    padding: 20px;
    border-radius: 10px;
    box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 25px;
    background: rgb(255, 255, 255);
    margin: 20px 4px;
}
.testimonial-rating span {
    color: #000000;
    font-size: 24px;
}
.testimonial-customer {
    display: flex;
    align-items: center;
    margin-top: 10px;
    flex-direction: column;
    gap: 20px;
}
  .customer-info p {
    margin: 0px;
}
  .testimonial-customer img {
    border-radius: 50%;
    margin-right: 10px;
  }

  @media(max-width: 767px){
    .testimonial_section_one .slick-list.draggable {
    padding-top: 10px !important;
}
  }

  @media(min-width: 768px) and (max-width: 992px){
    p.testimonial-text {
    font-size: 14px !important;
}
    strong.name-text {
    font-size: 15px !important;
}
    p.rose_name {
    font-size: 13px !important;
}
  }
</style>
<script>
    $('.testimonial_section').slick({
  centerMode: true,
  centerPadding: '90px',
  slidesToShow: 3,
  dots: true,
  infinite: true,
  responsive: [
