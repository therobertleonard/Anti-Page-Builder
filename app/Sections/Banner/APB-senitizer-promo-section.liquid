
{% comment %}
<!-- Liquid Section for Sanitizer Promo -->
{% endcomment %}

<div class="sanitizer-promo-section" style="background-color:{{ section.settings.bg_color_main }}; background-image:url({{ section.settings.after-image }}); padding-top: {{ section.settings.pdg_top }}px; padding-bottom: {{ section.settings.pdg_bottom }}px;">
  <div class="page-width">
    <div class="sanitizer-promo-container">

      {% comment %}
      <!-- Left Side: Text Content -->
      {% endcomment %}
      <div class="sanitizer-text" style="max-width: {{ section.settings.custom-dynamic_max_width }}%; 
                  width: {{ section.settings.custom-dynamic_width }}%;">
        <h1 class="sanitizer-heading" style="font-size:{{ section.settings.main_text_font_size }}px; 
                    color:{{ section.settings.main_text_color }}; 
                    letter-spacing: {{ section.settings.main_text_letter_spacing }}px; line-height: {{ section.settings.main_text_line_height }};">
          {{ section.settings.main_heading }}
        </h1>
        <p class="sanitizer-subheading" style="font-size:{{ section.settings.para_text_font_size }}px; 
                    color:{{ section.settings.para_text_color }}; 
                    letter-spacing: {{ section.settings.para_text_letter_spacing }}px; line-height: {{ section.settings.para_text_line_height }};">
          {{ section.settings.sub_heading }}
        </p>
        <div class="senti_btn" style="margin-top:{{ section.settings.mt-top }}px;">
          <div class="button-section" style="
            {% if section.settings.enable_box_shadow %} 
                box-shadow: {{ section.settings.box_shadow_x_offset }} {{ section.settings.box_shadow_y_offset }} {{ section.settings.box_shadow_blur }} {{ section.settings.box_shadow_color }}; 
            {% endif %}
            background-color: {{ section.settings.bg_button_color }}; 
            border-radius: {{ section.settings.button_border_radius }}px; 
            padding: {{ section.settings.btn-pdg }}px; 
            padding-left: {{ section.settings.pdg_left }}px; 
            padding-right: {{ section.settings.pdg_right }}px;">
            <a href="{{ section.settings.button_link }}" class="sanitizer-button" style="font-size:{{ section.settings.button_text_font_size }}px; 
                      color:{{ section.settings.button_text_color }}; 
                      letter-spacing: {{ section.settings.button_text_letter_spacing }}px; 
                      max-width: {{ section.settings.button-dynamic_max_width }}%; 
                      width: {{ section.settings.button-dynamic_width }}%;">
              {{ section.settings.button_text }}
            </a>
          </div>
          <div class="perst-div-class">
            <strong class="sanitizer-footer" style="font-size:{{ section.settings.made_text_font_size }}px; 
                      color:{{ section.settings.made_text_color }}; 
                      letter-spacing: {{ section.settings.made_text_letter_spacing }}px;">
              {{ section.settings.footer_text }}
            </strong>
          </div>
        </div>
      </div>

      {% comment %}
      <!-- Right Side: Product Image -->
      {% endcomment %}
      <div class="sanitizer-image-container">
        <img src="{% if section.settings.product_image != blank %}{{ section.settings.product_image | img_url: 'master' }}
          {% else %}https://cdn.shopify.com/s/files/1/0674/8363/1794/files/Hand-Sanitizer-PNG_2.webp?v=1729842694{% endif %}" 
             alt="Product Image">
      </div>
    </div>
  </div>
</div>


<style>
  @import url('https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap');
.sanitizer-promo-container {
    display: flex;
    position: relative;
}
  .button-section {
    cursor: pointer;
}
  .perst-div-class strong.sanitizer-footer {
    font-family: "Raleway", sans-serif;
}
.sanitizer-image-container img {
    width: 100%;
    height: auto;
    max-width: 420px;
}
  .sanitizer-text {
    margin-bottom: 5rem;
}
  .sanitizer-image-container {
    position: absolute;
    z-index: 2;
    right: 0;
    top: unset;
    bottom: -50px;
}
h1.sanitizer-heading {
    margin: 0px;
    line-height: 65px !important;
    font-family: "Raleway", sans-serif;
    font-weight: 900;
}
p.sanitizer-subheading {
    margin: 22px 0px;
    font-family: "Raleway", sans-serif;
}
  .senti_btn {
    display: flex;
    align-items: center;
    gap: 40px;
}
.button-section a.sanitizer-button {
    text-decoration: none;
    font-weight: 700;
    font-family: "Raleway", sans-serif;
}
  .sanitizer-promo-section:after {
    content: "";
    width: 100%;
    height: 200px;
    position: absolute;
    display: block;
    left: 0;
    right: 0;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center bottom;
    background-image: url(https://cdn.shopify.com/s/files/1/0674/8363/1794/files/download_1.svg?v=1729851630);
}
  .sanitizer-promo-section {
    position: relative;
    margin-bottom: 17rem;
}

  /* media query */
  @media(max-width: 767px){
    .sanitizer-promo-section {
    padding-top: 40px !important;
}
    .senti_btn {
    gap: 20px !important;
}
    .perst-div-class strong.sanitizer-footer {
    font-size: 16px !important;
}
    .sanitizer-promo-section:after {
    background-position: 60% 80%;
}
    .sanitizer-promo-container {
    display: flex;
    flex-direction: column;
}
.sanitizer-text {
    max-width: 100% !important;
    width: 100% !important;
}
    h1.sanitizer-heading {
    margin: 0px;
    font-size: 40px !important;
    line-height: 46px !important;
}
.sanitizer-text {
    margin-bottom: 17rem;
}
.sanitizer-image-container {
    top: 68%;
    width: 100%;
    text-align: center;
}
    p.sanitizer-subheading {
    margin: 16px 0px 0px;
    font-size: 18px !important;
    font-weight: 600;
    letter-spacing: 0px !important;
}
    .senti_btn {
    gap: 10px;
    flex-direction: column-reverse;
    margin-top: 10px !important;
}
    .button-section {
    width: 100%;
      text-align: center;
}
    .perst-div-class {
    text-align: left;
    width: 100%;
}
    .sanitizer-image-container img {
    width: 300px;
    max-width: 300px;
}
  }

  @media(max-width:1199px) and (min-width: 768px){
    .sanitizer-image-container {
    right: -50px;
}
    h1.sanitizer-heading {
    font-size: 40px !important;
    line-height: 47px !important;
}
    .button-section a.sanitizer-button {
    display: block;
    font-size: 12px !important;
}
  }
</style>
