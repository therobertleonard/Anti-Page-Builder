<div class="hand-sanitizer-features">
  <div class="page-width">
    <div class="main_santizer_sec" style="display: flex; gap: {{ section.settings.gap_size }}px;">
      <div class="left-section-content" style="max-width: {{ section.settings.custom-dynamic_max_width }}%; 
                      width: {{ section.settings.custom-dynamic_width }}%;">
        <!-- Section Title -->
        <h2 class="hdg-text" style="font-size:{{ section.settings.hg-font-size }}px; color:{{ section.settings.hg-font-color }}; 
                          letter-spacing: {{ section.settings.main_text_letter_spacing }}px; 
                          line-height: {{ section.settings.main_text_line_height }}; 
                          font-weight: {{ section.settings.font_weight }};">
          {{ section.settings.title }}
        </h2>

        <!-- Section Description -->
        <p class="description_text" style="font-size: {{ section.settings.desc_text }}px;  
                           color: {{ section.settings.desc_text_color }}; 
                           letter-spacing: {{ section.settings.desc_text_letter_spacing }}px;">
          {{ section.settings.description }}
        </p>

        <div class="button-sec-desktop" style="
                      {% if section.settings.enable_box_shadow %} 
                          box-shadow: {{ section.settings.box_shadow_x_offset }} {{ section.settings.box_shadow_y_offset }} {{ section.settings.box_shadow_blur }} {{ section.settings.box_shadow_color }}; 
                      {% endif %}
                      background-color: {{ section.settings.bg_button_color }}; 
                      border-radius: {{ section.settings.button_border_radius }}px; 
                      padding: {{ section.settings.btn-pdg }}px; 
                      padding-left: {{ section.settings.pdg_left }}px; 
                      padding-right: {{ section.settings.pdg_right }}px; 
                      border-color: {{ section.settings.border_color }};
                      border-width: {{ section.settings.border_width }}px;
                      border-style: {{ section.settings.border_style }};">
          <a
            href="{{ section.settings.button_link }}"
            class="sanitizer-button"
            style="font-size:{{ section.settings.button_text_font_size }}px; 
                            color:{{ section.settings.button_text_color }}; 
                            letter-spacing: {{ section.settings.button_text_letter_spacing }}px; 
                            max-width: {{ section.settings.button-dynamic_max_width }}%; 
                            width: {{ section.settings.button-dynamic_width }}%;">
            {{ section.settings.button_text }}
          </a>
        </div>
      </div>

      <!-- Feature Grid: Displays individual features in a grid layout -->
      <div class="feature-grid" style="max-width: {{ section.settings.custom-right-dynamic_max_width }}%; 
                                             width: {{ section.settings.custom-right-dynamic_width }}%;">
        {% for block in section.blocks %}
          <!-- Single Feature Item -->
          <div class="feature-item" style="border-color: {{ block.settings.border_color }};
                                border-width: {{ block.settings.border_width }}px;
                                border-style: {{ block.settings.border_style }}; 
                                border-radius: {{ block.settings.border_radius }}px; 
                                {% if block.settings.click_box_shadow %} 
                                    box-shadow: {{ block.settings.fea_box_shadow_x_offset }} {{ block.settings.fea_box_shadow_y_offset }} {{ block.settings.fea_box_shadow_blur }} {{ block.settings.fea_box_shadow_color }}; 
                                    padding: {{ block.settings.box-pdg }}px; 
                                {% endif %}">

              <!-- Feature Icon (if available) -->
            <img src="{% if block.settings.feature_icon != blank %}{{ block.settings.feature_icon | img_url: 'master' }}{% else %}https://cdn.shopify.com/s/files/1/0887/8194/7244/files/image_107_2.png?v=1730178333{% endif %}" alt="Feature Icon" />

            <!-- Feature Text -->
            <div class="featured-grid-content">
              <p class="desc_featured_content" style="font-size: {{ block.settings.feat_content }}px; 
                                      color: {{ block.settings.feat_content_color }}; 
                                      font-family: {{ block.settings.font_family }};">
                {{ block.settings.feature_text }}
              </p>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>


<style>
  @import url('https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900 &family=Raleway:ital,wght@0,100..900;1,100..900&display=swap');

  .main_santizer_sec {
    display: flex;
  }

  .hand-sanitizer-features {
    padding: 20px;
  }

  .featured-grid-content p {
    margin: 0;
  }

  .left-section-content h2.hdg-text {
    margin: 0;
    font-family: "Raleway"
    , sans-serif;
  }

  .feature-item img {
    width: 90px;
    max-width: 100%;
  }

  .button-sec-desktop {
    width: 40%;
    max-width: 40%;
    text-align: center;
    cursor: pointer;
  }

  .feature-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    margin: 0;
  }

  .feature-item {
    width: 150px;
    text-align: center;
  }

  .button-sec-desktop a.sanitizer-button {
    text-decoration: none;
    font-family: "Raleway"
    , sans-serif;
  }

  .cta-button {
    display: inline-block;
    padding: 10px 20px;
    background-color: #333;
    color: #fff;
    border-radius: 5px;
    text-decoration: none;
  }

  /* media query */
  @media(max-width: 767px) {
    .main_santizer_sec {
      flex-direction: column;
    }

    .left-section-content {
      width: 100% !important;
      max-width: 100% !important;
    }

    .hand-sanitizer-features {
      padding: 30px 0;
    }

    .left-section-content h2.hdg-text {
      font-size: 22px !important;
      letter-spacing: 0 !important;
    }

    p.description_text {
      font-size: 17px !important;
    }

    .button-sec-desktop {
      width: 100%;
      max-width: 100%;
    }

    .feature-grid {
      width: 100% !important;
      max-width: 100% !important;
      justify-content: space-between;
    }

    .feature-item {
      width: 46%;
      max-width: 46%;
    }
  }
</style>

