}
button.slick-prev.slick-arrow:after {
    position: absolute;
    content: "\f104";
    font-size: 30px;
    color: #ffffff;
    font-family: fontAwesome;
    left: 15px !important;
    top: 5px !important;
}
button.slick-arrow {
    background: #000;
    border: 0px;
    font-size: 0px;
    position: absolute;
    z-index: 2;
    top: 44%;
    height: 40px;
    width: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50px;
    cursor: pointer;
}
  button.slick-arrow.slick-disabled {
    display: none;
}
  button.slick-prev.slick-arrow {
    left: 70px;
}
button.slick-next.slick-arrow:after {
    position: absolute;
    content: "\f105";
    font-size: 30px;
    color: #ffffff;
    font-family: fontAwesome;
}
  button.slick-next.slick-arrow {
    right: 70px;
}
.feature-card-section {
    /* flex: 1; */
    border-radius: 15px 0px 0px 15px;
    color: white;
    text-align: center;
      display: flex;
    justify-content: space-between;
    gap: 1em;
}
.text-card-section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-image: linear-gradient(180deg, rgba(255, 255, 255, 1), rgba(248, 233, 160, 1) 100%);
    /* padding: 120px 40px 120px !important; */
}
  section.three-column-feature-section {
    background-image: linear-gradient(180deg, rgba(233, 198, 23, 1), rgba(255, 255, 255, 1) 100%);
    padding: 2em 0;
    text-align: center;
}
.image-card img {
    width: 100%;
    height: auto;
    border-radius: 0px 15px 15px 0px;
    object-fit: cover;
}
  .subheading {
    text-transform: uppercase;
    opacity: 0.8;
  }
.feature-cards.slick-slide {
    display: flex;
    gap: 0px;
    margin-right: 30px;
}
  .feature-card.text-card p{
    margin: 0px;
}
  .feature-card.text-card h2 {
    margin: 0px;
}
  .three-column-feature-section .slick-list.draggable {
    padding-left: 20rem !important;
    padding-right: 20rem !important;
}

  /* media query */
  @media(max-width: 767px){
  .feature-cards.slick-slide {
    flex-direction: column-reverse;
    margin-right: 0px;
}
  .text-card {
    padding: 50px 20px 50px !important;
    background-image: linear-gradient(180deg, rgb(247 151 185), rgba(230, 64, 123, 1) 100%);
   }
  .image-card img {
    border-radius: 15px 15px 0px 0px;
}
    section.three-column-feature-section {
    padding: 2em 15px;
}
.feature-card-section {
    border-radius: 0px 0px 15px 15px;
    padding: 40px 40px 40px !important;
}
    .feature-card-section.text-card-section h2 {
    font-size: 32px !important;
}
.three-column-feature-section .slick-list.draggable {
    padding-left: 0rem !important;
    padding-right: 0rem !important;
}
    button.slick-arrow {
    top: 37%;
}
    button.slick-prev.slick-arrow {
    left: 30px;
}
    button.slick-next.slick-arrow {
    right: 30px;
}
    .three-column-feature {
    padding: 2em 14px;
}
    }
  @media(max-width: 992px) and (min-width: 768px){
    .text-card-section {
    padding: 20px 20px 20px !important;
}
    .feature-card-section.text-card-section h2 {
    font-size: 18px !important;
}
    .feature-card-section.text-card-section p {
    font-size: 12px !important;
}
    section.three-column-feature ul.slick-dots {
    display: none;
}
  }
  /* End here */
</style>
<script>
   $('.slider_section_2').slick({
  dots: false,
  arrows: false,
  infinite: false,
  speed: 300,
  slidesToShow: 1,
  slidesToScroll: 1,
  centerMode: true,
  vertical: false,
  responsive: [
