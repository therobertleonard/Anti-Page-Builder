<!-- /sections/three-column-feature.liquid -->
<section class="three-column-feature-section">
  <div class="page-widthh">
    <div class="slider_section_2">
      {% comment %}------- Loop through each block in the section------ {% endcomment %}
      {% for block in section.blocks %}
        <div class="feature-cards">
          <!-- Left Card -->
          <div class="feature-card-section text-card-section" style="background-color: {{ block.settings.left_bg_color }}; 
            padding: {{ block.settings.box_padding }}px;">
            {% comment %}------ Display the subheading with dynamic styles ------------{% endcomment %}
            <p class="subheading" style="font-size: {{ block.settings.hdg_text }}px;  
              color: {{ block.settings.hdg_text_color }}; 
              letter-spacing: {{ block.settings.main_text_letter_spacing }}px; font-family: {{ block.settings.font_family_hdg }}; 
              font-weight: {{ block.settings.font_weight_hdg }};">{{ block.settings.left_subheading }}</p>
            {% comment %}------- Display the main title with dynamic styles-------- {% endcomment %}
            <h2 style="font-size: {{ block.settings.tittle_text }}px;  
              color: {{ block.settings.tittle_text_color }}; 
              letter-spacing: {{ block.settings.tittle_text_letter_spacing }}px; font-family: {{ block.settings.font_family_tittle }}; 
              font-weight: {{ block.settings.font_weight_tittle }};">{{ block.settings.left_title }}</h2>
            {% comment %}------- Display the description with dynamic styles------- {% endcomment %}
            <p style="font-size: {{ block.settings.desc_text }}px;  
              color: {{ block.settings.desc_text_color }}; 
              letter-spacing: {{ block.settings.desc_text_letter_spacing }}px; font-family: {{ block.settings.font_family_desc }}; 
              font-weight: {{ block.settings.font_weight_desc }};">{{ block.settings.left_description }}</p>
          </div>
          {% comment %}
          <!-- Center Image -->
        {% endcomment %}
          <div class="feature-card image-card">
            <img src="{% if block.settings.center_image != blank %} {{ block.settings.center_image | img_url: 'small' }}
              {% else %} https://cdn.shopify.com/s/files/1/0887/8194/7244/files/dose-juice-tzVNH25aL6k-unsplash.webp?v=1730720465 {% endif %}">
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>



<style>
  .feature-card-section.text-card-section h2 {
    margin: 0px;
}
  .feature-card.text-card h2 {
    line-height: 50px;
}
  .feature-card-section.text-card-section p {
